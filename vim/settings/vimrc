" Basics '''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''
syntax on
filetype plugin indent on
set mouse=a
set noswapfile
set nobackup
set nowb
set visualbell
set laststatus=2
set number
et dir=~/.vim/swap//,/var/tmp//,/tmp//,.

" Tabs
set softtabstop=2
set shiftwidth=2
set tabstop=2
set expandtab

" Keys '''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''
let mapleader = ','

nmap <Leader>n :NERDTreeToggle<CR>
nmap <Leader>t <C-p>


