"= GUI Options ====================================================================================

  set guioptions-=T      " disable toolbar
  set guioptions-=r      " disable right scrollbar
  set guioptions-=L      " disable left scrollbar

"= Font ===========================================================================================

  set guifont=Meslo\ LG\ L\ for\ Powerline:h13
  set antialias

  set linespace=1                         " give the code some breathing room

